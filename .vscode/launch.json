    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Listen (use for kodi)", // Client must invoke connect(('127.0.0.1', 5678))
            "type": "debugpy",
            "request": "attach",
            "listen": {
                "host": "127.0.0.1",
                "port": 5678
            },
        },
        {
            "name": "Python Debugger: Connect", // Client should invoke listen(('127.0.0.1', 5678))
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
        }
    ]
}